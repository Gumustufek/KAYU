#include <stdio.h>
int main(){

int x;

do{
    printf("Secmek istediginiz gunu sayiyla belirtiniz: ");
    scanf("%d", &x);

switch(x){

    case 1:
    printf("Pazartesi");
    break;

    case 2:
    printf("Sali");
    break;

    case 3:
    printf("Carsamba");
    break;

    case 4:
    printf("Persembe");
    break;

    case 5:
    printf("Cuma");
    break;

    case 6:
    printf("Cumartesi");
    break;

    case 7:
    printf("Pazar");
    break;

    default:
    printf("Lutfen 1 ile 7 arasinda (1 ve 7 dahil) bir sayi giriniz\n");
}

}
 while(x<1 || x>7);
    return 0;
}
